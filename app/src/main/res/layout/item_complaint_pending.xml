<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Complaint Title and Status Badge -->

        <TextView
            android:id="@+id/tv_complaint_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/badge_status_pending"
            tools:text="Ceiling Fan Not Working"/>

        <TextView
            android:id="@+id/badge_status_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pending_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Pending"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Student Details -->
        <TextView
            android:id="@+id/tv_student_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_complaint_title"
            tools:text="From: John Doe (Room D-301, 21BCE1234)"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_complaint_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_student_details"
            tools:text="The fan in my room has stopped working completely since this morning. It makes a strange noise when I try to turn it on."/>

        <!-- Divider -->
        <View
            android:id="@+id/divider_action"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_complaint_description"/>

        <!-- Action Section: Allot Worker -->
        <TextView
            android:id="@+id/label_allot_worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Allot a Worker:"
            android:textColor="@color/design_default_color_primary"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_action"/>

        <!-- Spinner to select a worker -->
        <Spinner
            android:id="@+id/spinner_workers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="select worker"
            android:minHeight="48dp"
            app:layout_constraintEnd_toStartOf="@id/btn_allot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_allot_worker" />

        <!-- Button to confirm allotment -->
        <Button
            android:id="@+id/btn_allot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allot"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/spinner_workers"
            app:layout_constraintTop_toTopOf="@id/spinner_workers"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>